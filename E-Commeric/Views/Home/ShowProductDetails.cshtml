@model ShowProductDetails
<style>
    .product-details .main-image {
        width: 100%;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    .product-details .small-img-group img {
        cursor: pointer;
        transition: transform 0.2s;
    }

        .product-details .small-img-group img:hover {
            transform: scale(1.1);
        }

    .product-details button:hover {
        color: #000;
    }
</style>
<section id="pro-details" class="section-p1 container mt-100">
        <div class="row g-4">
            <div class="col-md-6">
                <div class="d-flex justify-content-between small-img-group mt-3" style="width:70%">
                @if (@Model.Paths is not null)
                {
                    var carouselId = $"carousel-{@Model.ProductName}";

                    <div id="@carouselId" class="carousel slide" data-bs-ride="carousel">
                        <!-- Indicators -->
                        <div class="carousel-indicators">
                            @for (int i = 0; i < @Model.Paths.Count; i++)
                            {
                                <button type="button" data-bs-target="#@carouselId"
                                        data-bs-slide-to="@i"
                                        class="@(i == 0 ? "active" : "")"
                                        aria-current="@(i == 0 ? "true" : "false")"
                                        aria-label="Slide @(i+1)">
                                </button>
                            }
                        </div>

                        <!-- Carousel Images -->
                        <div class="carousel-inner">
                            @foreach (var path in @Model.Paths)
                            {
                                <div class="carousel-item  @(1==1? "active" : "") " >
                                    <img src="@path" class="d-block w-100 rounded-3" alt="Product Image" style="width:100% ; height:100%; ">
                                </div>
                            }
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#@carouselId" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#@carouselId" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                }
                </div>
            </div>
            <div class="col-md-6 product-details">
                <h6 class="text-muted">Home / T-Shirt</h6>
                <h4 class="mt-3">@Model.ProductName</h4>
            <h2 class="text-success">@Model.Price</h2>
                <div class="mt-4">
                    <div class="input-group mb-3 " style="width:50px">
                        <input type="number" name="name" value="1"style="width:50px" min="0" />
                    </div>
                    <button class="btn btn-success px-4">Add to Cart</button>
                </div>
                <h4 class="mt-5">Product Details</h4>
                <p>@Model.ProductDetails</p>
            </div>
        </div>
    </section>
<div id="productData">
    @await Html.PartialAsync("_Footer")
</div>