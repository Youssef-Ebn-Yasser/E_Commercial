</section>
<section id="new-product" class="section-p1 py-5">
    <div class="container">
        <div class="header text-center mb-5">
            <h2>Featured Products</h2>
            <p>Summer Collection new modern design</p>
        </div>
        <div class="row g-4">
            <!-- Product Card 1 -->
            @if(Model is not null)
            {

                foreach (var product in Model.Take(Model.Count / 2))
                {
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                        <div class="card border-light rounded-3 shadow-sm p-3">
                            @if (product.Paths is not null)
                            {
                                var carouselId = $"carousel-{product.ProductId}";

                                <div id="@carouselId" class="carousel slide" data-bs-ride="carousel">
                                    <!-- Indicators -->
                                    <div class="carousel-indicators">
                                        @for (int i = 0; i < product.Paths.Count; i++)
                                        {
                                            <button type="button" data-bs-target="#@carouselId"
                                                    data-bs-slide-to="@i"
                                                    class="@(i == 0 ? "active" : "")"
                                                    aria-current="@(i == 0 ? "true" : "false")"
                                                    aria-label="Slide @(i+1)">
                                            </button>
                                        }
                                    </div>

                                    <!-- Carousel Images -->
                                    <div class="carousel-inner">
                                        @foreach (var path in product.Paths)
                                        {
                                            <div class="carousel-item  @(1==1? "active" : "") ">
                                                <img src="@path" class="d-block w-100 rounded-3" alt="Product Image" style="width:100px ; height:200px">
                                            </div>
                                        }
                                    </div>
                                    <button class="carousel-control-prev" type="button" data-bs-target="#@carouselId" data-bs-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Previous</span>
                                    </button>
                                    <button class="carousel-control-next" type="button" data-bs-target="#@carouselId" data-bs-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Next</span>
                                    </button>
                                </div>
                            }
                            <div class="card-body">
                                <span class="text-muted">@product.ProductName</span>
                                <h5 class="card-title mt-2">@product.CategoryName</h5>
                                <div class="star mb-2">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                </div>
                                <h4>@product.Price</h4>
                                <a asp-action="_SaveInCookiesAndRedirect" asp-controller="Home" asp-route-productId="@product.ProductId" class="btn btn-outline-success rounded-circle position-absolute" style="right: 10px; bottom: 10px;">
                                    <i class="fas fa-cart-plus"></i>
                                </a>
                                <a asp-action="ShowProductDetails" asp-controller="Home" asp-route-Id="@product.ProductId" class="btn btn-outline-warning  ">More details</a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>
