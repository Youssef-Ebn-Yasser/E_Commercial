@model RegisterViewModel
@{
    <link href="~/css/register.css" rel="stylesheet" />

}
<body class="bg-gray">
    <div class="container center-flex mt-100">
        <div class="col-12 col-lg-6 col-md-5 col-lg-4  ">
            <div class="card card-shadow border-0 rounded-3">
                <div class="card-body p-4">
                    <div class="row g-6">
                        <div class="col-12">
                            <div class="text-center">
                                <h3 class="fm-bold fs-5 mb-2">Register</h3>
                                <p class="text-muted">Create a new account</p>
                            </div>
                        </div>
                        <form asp-action="Register" asp-controller="Account" method="post">
                            <div class="form-floating mb-4">
                                <input type="text" class="form-control rounded-2 border-0 bg-gray" asp-for="UserName" placeholder="UserName" />
                                <label for="UserName">User Name</label>
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-4">
                                <input type="email" class="form-control rounded-2 border-0 bg-gray" asp-for="Email" placeholder="Email" />
                                <label for="email">Email</label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-4">
                                <input type="password" class="form-control rounded-2 border-0 bg-gray" asp-for="Password" name="Password" placeholder="Password" />
                                <label for="password">Password</label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-4">
                                <input type="password" class="form-control rounded-2 border-0 bg-gray" asp-for="ConfirmPassword" name="ConfirmPassword" placeholder="Confirm Password" />
                                <label for="ConfirmPassword">Confirmed Password</label>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-4">
                                <input type="text" class="form-control rounded-2 border-0 bg-gray" asp-for="PhoneNumber" name="PhoneNumber" placeholder="Phone Number" />
                                <label for="PhoneNumber">Phone Number</label>
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-4">
                                <input type="text" class="form-control rounded-2 border-0 bg-gray" asp-for="Address" name="Address" placeholder="Address" />
                                <label for="ConfirmPassword">Address</label>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block btn-lg fs-6 fm-bolder py-3 w-100" asp-action="Register" asp-controller="Account">Sign up</button>
                        </form>

                    </div>
                </div>
            </div>
            <div class="text-center mt-4">
                <p class="text-muted">
                    Already have an account?
                    <a href="/Account/Login" class="text-none">Login</a>
                </p>
            </div>
        </div>
    </div>
</body>