@model List<ShowAllProductsViewModel>


<body>
    <div class="container " style="margin-top:100px">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div class="d-flex align-items-center">
                <i class="fas fa-users fa-lg text-primary me-2"></i>
                <h4 class="m-0">Product List</h4>
            </div>
            <a class="btn btn-primary" asp-action="Create" asp-controller="Product" method="Get">
                <i class="fas fa-user-plus"></i> Add Product
            </a>
        </div>
        <div class="d-flex justify-content-between align-items-center mb-3">

            <div>
                <form asp-action="ShowAll" asp-controller="Product" method="get" class="mt-3">
                    <label for="enter name to search for" class="me-2">Search:</label>
                    <input type="text" id="search" name="search" value="@ViewBag.Search" class="form-control form-control-sm d-inline-block" style="width: 200px;">
                    <button type="submit" class="btn btn-info">Search</button>
                </form>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="bg-primary text-white">
                    <tr>
                        <th>Product Id</th>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>AmountInStock</th>
                        <th>Brand</th>
                        <th>CategoryName</th>
                        <th>CreatedDate</th>  
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if(Model is not null)
                    {
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>@product.ProductId</td>
                                <td>@product.ProductName</td>
                                <td>@product.Price</td>
                                <td>@product.AmountInStock</td>
                                <td>@product.Brand</td>
                                <td>@product.CategoryName</td>
                                <td>@product.CreatedDate</td>
                                <td>
                                    <form>
                                        <a class="btn btn-sm btn-primary" asp-action="Update"
                                           asp-route-id="@product.ProductId">Update</a>
                                        <a type="submit"
                                           class="btn btn-sm btn-danger" onclick="confirmDelete('@Url.Action("Delete", new { id = product.ProductId })')">
                                            Delete
                                        </a>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    <tr>
                </tbody>
                <thead class="bg-primary text-white">
                    <tr>
                        <th>Product Id</th>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>AmountInStock</th>
                        <th>Brand</th>
                        <th>CategoryName</th>
                        <th>CreatedDate</th>
                        <th>Action</th>
                    </tr>
                </thead>
            </table>
        </div>

        <div class="text-center mt-3">
            <a asp-action="Index" asp-controller="Services" class="btn btn-warning mb-1">Back to Services</a>
            <p>Follow me on <a href="#" class="text-primary">Facebook</a></p>
            <p>Follow me on <a href="https://www.linkedin.com/in/yousef-yasser-hamada " class="text-primary">LinkedIn</a></p>
        </div>
    </div>
</body>



<script>
    function confirmDelete(url) {
        const userConfirmed = confirm("Are you sure you want to delete this item?");
        if (userConfirmed) {
            window.location.href = url;
        }
    }
</script>