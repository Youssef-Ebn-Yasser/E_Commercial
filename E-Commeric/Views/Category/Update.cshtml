@model UpdateCategoryViewModel

<body class="bg-gray">
    <div class="d-flex justify-content-center">
        <form asp-action="Update" asp-controller="Category" method="post" class="w-100 m-5 bg-white"
              style="max-width: 600px; padding: 20px; border: 1px solid #ddd; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); border-radius: 8px;">
            <div class="bg-primary text-center text-white py-2 mb-4" style="border-radius: 6px;">
                <h4>Update Category</h4>
            </div>
            <div asp-validation-summary="All" class="text-danger mb-3"></div>
            <input asp-for="CategoryId" hidden />
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CategoryName"></label>
                        <input asp-for="CategoryName" class="form-control" placeholder="Enter the CategoryType Name"
                               style="outline: none;" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div>
                <label>CategoryId</label>
                <select asp-for="CategoryTypeId" class="form-control" asp-items="ViewBag.categories">
                </select>
            </div>
            <div class="mt-4 text-center">
                <button asp-action="Update" type="submit" class="btn btn-primary">Update</button>
                <a asp-action="ShowAll" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</body>