@model IEnumerable<ShowAllCategoryTypeViewModel>
<body style="margin-top:100px">
    <div class="container ">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div class="d-flex align-items-center">
                <i class="fas fa-tags fa-lg text-primary me-2"></i>
                <h4 class="m-0">Category Types List</h4>
            </div>
            <a class="btn btn-primary" asp-action="Create" asp-controller="CategoryType">
                <i class="fas fa-plus"></i> Add Category Type
            </a>
        </div>
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <form asp-action="ShowAll" asp-controller="CategoryType" method="get" class="mt-3">
                    <label for="enter name to search for" class="me-2">Search:</label>
                    <input type="text" id="search" name="search" value="@ViewBag.Search" class="form-control form-control-sm d-inline-block" style="width: 200px;">
                    <button type="submit" class="btn btn-info">Search</button>
                </form>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="bg-primary text-white">
                    <tr>
                        <th>Category Type ID</th>
                        <th>Category Type Name</th>
                        <th>Categories Count</th>
                        <th>NumberOfCategory</th>
                        <th>Action</th>

                    </tr>
                </thead>
                <tbody>
                    @if(Model is not null)
                    {
                        @foreach (var categoryType in Model)
                        {
                            <tr>
                                <td>@categoryType.CategoryTypeId</td>
                                <td>@categoryType.CategoryTypeName</td>
                                <td>@categoryType.CreatedDate</td>
                                <td>@categoryType.NumberOfCategory</td>
                                <td>
                                    <form>
                                        <a class="btn btn-sm btn-primary" asp-action="Update"
                                           asp-route-id="@categoryType.CategoryTypeId">Update</a>
                                        <a type="submit"
                                           class="btn btn-sm btn-danger" onclick="confirmDelete('@Url.Action("Delete", new { id = @categoryType.CategoryTypeId })')">
                                            Delete
                                        </a>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
                <thead class="bg-primary text-white">
                    <tr>
                        <th>Category Type ID</th>
                        <th>Category Type Name</th>
                        <th>Categories Count</th>
                        <th>NumberOfCategory</th>
                        <th>Action</th>
                    </tr>
                </thead>
            </table>
        </div>

        <div class="text-center mt-3">
            <a asp-action="Index" asp-controller="Services" class="btn btn-warning mb-1">Back to Services</a>
            <p>Follow me on <a href="#" class="text-primary">Facebook</a></p>
            <p>Follow me on <a href="https://www.linkedin.com/in/yousef-yasser-hamada " class="text-primary">LinkedIn</a></p>
        </div>
    </div>
</body>

<script>
    function confirmDelete(url) {
        const userConfirmed = confirm("Are you sure you want to delete this item?");
        if (userConfirmed) {
            window.location.href = url;
        }
    }
</script>