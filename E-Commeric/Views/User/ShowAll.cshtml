@model IEnumerable<ShowAllUsersViewModel>

<body>
    <div class="container " style="margin-top:100px">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div class="d-flex align-items-center">
                <i class="fas fa-users fa-lg text-primary me-2"></i>
                <h4 class="m-0">Users List</h4>
            </div>
            <a class="btn btn-primary" asp-action="Create" asp-controller="User" method="Get">
                <i class="fas fa-user-plus"></i> Add User
            </a>
        </div>
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <form asp-action="ShowAll" asp-controller="User" method="get" class="mt-3">
                    <label for="enter name to search for" class="me-2">Search:</label>
                    <input type="text" id="search" name="search" value="@ViewBag.Search" class="form-control form-control-sm d-inline-block" style="width: 200px;">
                    <button type="submit" class="btn btn-info">Search</button>
                </form>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="bg-primary text-white">
                    <tr>
                        <th>National Id</th>
                        <th>User Name</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Address</th>
                        <th>Type</th>
                        <th>Operation</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach(var user in Model)
                    {

                        <tr>
                            <td>@user.NationalId</td>
                            <td>@user.UserName</td>
                            <td>@user.Name</td>
                            <td>@user.Email</td>
                            <td>@user.PhoneNumber</td>
                            <td>@user.Address</td>
                            <td>@user.Type</td>
                            <td>
                                <form  >
                                    <a class="btn btn-sm btn-primary" asp-action="Update"
                                       asp-route-id="@user.Id">Update</a>
                                    <a type="submit"
                                            class="btn btn-sm btn-danger" onclick="confirmDelete('@Url.Action("Delete", new { id = user.Id })')">
                                        Delete
                                    </a>
                                </form>
                            </td>
                        </tr>
                    }
                    <tr>
                </tbody>
                <thead class="bg-primary text-white">
                    <tr>
                        <th>National Id</th>
                        <th>User Name</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Address</th>
                        <th>Type</th>
                        <th>Operation</th>
                    </tr>
                </thead>
            </table>
        </div>

        <div class="text-center mt-3">
            <a asp-action="Index" asp-controller="Services" class="btn btn-warning mb-1">Back to Services</a>
            <p>Follow me on <a href="#" class="text-primary">Facebook</a></p>
            <p>Follow me on <a href="https://www.linkedin.com/in/yousef-yasser-hamada " class="text-primary">LinkedIn</a></p>
        </div>
    </div>
</body>



<script>
    function confirmDelete(url) {
        const userConfirmed = confirm("Are you sure you want to delete this item?");
        if (userConfirmed) {
            window.location.href = url;
        }
    }
</script>